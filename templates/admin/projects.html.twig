{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <section class="admin-dashboard">
            <h1 class="dashboard-title">Tableau de bord - Projets</h1>
            <a href="{{ path('admin') }}">Retour</a>

            <div class="actions-container">
                <a href="{{ path('newproject') }}" class="button button-add">Ajouter un projet</a>
            </div>

            <div class="projects-table-container">
                {% if projects is not empty %}
                    <table class="projects-table">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Date de création</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for project in projects %}
                            <tr>
                                <td>{{ project.id }}</td>
                                <td>{{ project.name }}</td>
                                <td>{{ project.description|length > 50 ? project.description[:50] ~ '...' : project.description }}</td>
                                <td>{{ project.createdAt|date('d/m/Y') }}</td>
                                <td>{{ project.status }}</td>
                                <td>
                                    <a href="{{ path('editproject', {id: project.id}) }}" class="button button-edit">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p>Aucun projet trouvé. Vous pouvez en ajouter un à l'aide du bouton ci-dessus.</p>
                {% endif %}
            </div>
        </section>
    </main>
{% endblock %}