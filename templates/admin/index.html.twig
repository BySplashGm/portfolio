{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col-md-6">
            <h3 class="mb-3">Latest Messages</h3>

            {% if messages is empty %}
                <p class="text-muted">No new message</p>
            {% else %}
                <ol class="ps-3">
                    {% for message in messages %}
                        <li class="mb-2">
                            <a href="{{ ea_url()
                                .setController('App\\Controller\\Admin\\MessageCrudController')
                                .setAction('detail')
                                .setEntityId(message.id)
                            }}" class="text-decoration-none">
                                <strong>{{ message.name }}</strong>
                                <span class="text-muted">({{ message.email }})</span>
                                <span class="text-muted">- {{ message.createdAt|date() }}</span>
                            </a>
                            <div>{{ message.subject }}</div>
                        </li>
                    {% endfor %}
                </ol>
            {% endif %}
        </div>

        <div class="col-md-6">
            <h3 class="mb-3">Stats</h3>

            {% for stat in stats %}
                <div class="mb-2">
                    <span class="fw-bold">{{ stat.amount }}</span>
                    <span class="text-muted">{{ stat.title }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
